<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bheem_bg"
    tools:context=".chotaBheem">

    <GridLayout
        android:id="@+id/Board"
        android:layout_width="315dp"
        android:layout_height="315dp"
        android:background="@drawable/board"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.442">

        <ImageView
            android:layout_width="85dp"
            android:layout_height="105dp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="dropIn"
            android:tag="0" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="105dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="30dp"
            android:onClick="dropIn"
            android:tag="1" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="105dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="30dp"
            android:onClick="dropIn"
            android:tag="2" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="105dp"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="dropIn"
            android:tag="3" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="105dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="30dp"
            android:onClick="dropIn"
            android:tag="4" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="105dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="30dp"
            android:onClick="dropIn"
            android:tag="5" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="105dp"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="dropIn"
            android:tag="6" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="105dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="30dp"
            android:onClick="dropIn"
            android:tag="7" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="105dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="30dp"
            android:onClick="dropIn"
            android:tag="8" />

    </GridLayout>

    <Button
        android:id="@+id/restart"
        android:layout_width="241dp"
        android:layout_height="50dp"
        android:background="@drawable/restart_button"
        android:fontFamily="@font/mmedium"
        android:onClick="playAgain"
        android:text="RESTART"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Board"
        app:layout_constraintVertical_bias="0.598" />

    <TextView
        android:id="@+id/txtMess"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:fontFamily="@font/limelight"
        android:text="BHEEM : 0"
        android:textAlignment="gravity"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Board"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382" />

    <TextView
        android:id="@+id/txtMess2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:fontFamily="@font/limelight"
        android:text="RAJU : 0"
        android:textAlignment="gravity"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Board"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMess"
        app:layout_constraintVertical_bias="0.382" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/mmedium"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/restart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Board" />

</androidx.constraintlayout.widget.ConstraintLayout>